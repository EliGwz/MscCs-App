<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:src="@drawable/application"/>

        <TextView
            android:id="@+id/admissionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission Requirements"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:background="@android:color/holo_green_dark" />


        <TextView
            android:id="@+id/eligibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title1"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/eligibilit_p11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph11"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/eligibilit_p12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph12"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/regulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title2"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/regulations_p21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph21"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/regulations_p22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph22"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/eng_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title3"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/eng_req_p31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph31"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/eng_req_p32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph32"
            android:textSize="15sp"/>

    </LinearLayout>
</ScrollView>