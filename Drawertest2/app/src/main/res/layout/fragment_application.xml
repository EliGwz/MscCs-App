<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:src="@drawable/application"/>

        <TextView
            android:id="@+id/admissionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Procedures"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:background="@android:color/holo_green_dark" />


        <TextView
            android:id="@+id/how_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Apply"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/how_to_p11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph11"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/applyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Application"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_light"
            android:textColorLink="@android:color/holo_blue_bright"
            android:onClick="applyBtnOnClick"/>
        <TextView
            android:id="@+id/how_to_p12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph12"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/how_to_p13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph13"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/how_to_p14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph14"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/app_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Fee"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rapp_fee_p21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph21"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/app_fee_p22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph22"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Timetable"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/timetable_p31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph31"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/timetable_p32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paragraph32"
            android:textSize="15sp"/>

    </LinearLayout>
</ScrollView>